{
  "name": "PlanarityTest",
  "license": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bluefissure/PlanarityTest"
  },
  "scripts": {
    "lint": "node_modules/.bin/eslint js",
    "lintfix": "node_modules/.bin/eslint --fix js"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "rules": {
      "camelcase": "off",
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "guard-for-in": "off",
      "indent": [
        "error",
        2,
        {
          "ArrayExpression": 1,
          "CallExpression": {
            "arguments": 2
          },
          "FunctionDeclaration": {
            "parameters": 2
          },
          "FunctionExpression": {
            "parameters": 2
          },
          "ignoreComments": false,
          "ObjectExpression": 1
        }
      ],
      "linebreak-style": [
        "error",
        "windows"
      ],
      "max-len": [
        "error",
        {
          "code": 100,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreUrls": true,
          "tabWidth": 2
        }
      ],
      "new-cap": [
        "error",
        {
          "capIsNew": false,
          "newIsCap": false,
          "properties": false
        }
      ],
      "no-console": "off",
      "no-else-return": "error",
      "no-undef": "off",
      "no-unused-vars": "off",
      "no-useless-escape": "off",
      "object-curly-newline": [
        "error",
        {
          "consistent": true,
          "multiline": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "object-property-newline": [
        "error",
        {
          "allowAllPropertiesOnSameLine": true
        }
      ],
      "operator-linebreak": "error",
      "prefer-rest-params": "off",
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "require-jsdoc": "off",
      "space-in-parens": [
        "error",
        "never"
      ],
      "strict": [
        "error",
        "global"
      ],
      "unicode-bom": [
        "error",
        "never"
      ]
    },
    "parserOptions": {
        "sourceType": "module"
    }
  }
}
